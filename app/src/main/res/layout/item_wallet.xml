<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/height_4"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/height_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/height_4">

        <com.umawallet.custom.TfTextView
            android:id="@+id/tvNickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            app:ftype="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_2"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Address : "
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tvValueAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fdfdff"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_2"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Public key : "
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tvValueKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:gravity="center|left"
                android:text="fdfdff"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_2"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Adhar number : "
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tvValueAddhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fdfdff"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_3"
            android:gravity="center|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_6"
                android:padding="@dimen/padding_2"
                android:src="@drawable/ic_delete_black_24dp"
                android:tint="@color/red" />

            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_6"
                android:padding="@dimen/padding_2"
                android:src="@drawable/ic_edit_black_24dp" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
